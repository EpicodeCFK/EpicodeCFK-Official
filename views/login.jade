doctype html
html
  head
    title Login | EpicodeCFK - Coding For Kids
    link(href='/stylesheets/style.css', rel='stylesheet')

    link(rel='icon', href='/images/Logo.png')

    
  body.index1
    .index2
      header.jframe
        a.Logo1(href='/')
          img.Logo(title='Epicode CFK', src='/images/Logo.png')
      nav.g
        p.ac1
          ul.nav
            a.login(href='/') Home
            a#coursess.login(href='/#courses') Courses
            if !user
              a.login(href='/users/register') Sign Up

              
            a.login(href='/support') Support

            if user
              a.login(href='/users/logout') Logout
    .intro

      h2.page-header.texting Login
      p.texting Please Login using the form below
      form(method='post', action='/users/login')
        
        .form-group
          label.texting Username
          input.form-control(name='username', type='text', placeholder='Enter Username')

        .form-group
          label.texting Password
          input.form-control(name='password', type='password', placeholder='Enter Password')

        center
          input.texting(type='submit', name='submit', value="Login")
          
    footer
      p.l &copy Epicode CFK 2018
